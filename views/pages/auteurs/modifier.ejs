<%- include('../../partials/header') %>

<h2>Modifier l'auteur</h2>

<form action="/auteurs/modifier/<%= auteur.id %>" method="post">
  <div class="form-group">
    <label for="nom">Nom :</label>
    <input type="text" id="nom" name="nom" value="<%= auteur.nom %>" required>
  </div>

  <div class="form-group">
    <label for="prenom">Prénom :</label>
    <input type="text" id="prenom" name="prenom" value="<%= auteur.prenom %>" required>
  </div>

  <div class="form-group">
    <label for="date_naissance">Date de naissance :</label>
    <input type="date" id="date_naissance" name="date_naissance" value="<%= auteur.date_naissance ? auteur.date_naissance.toISOString().split('T')[0] : '' %>">
  </div>

  <div class="form-group">
    <label for="nationalite">Nationalité :</label>
    <input type="text" id="nationalite" name="nationalite" value="<%= auteur.nationalite %>">
  </div>

  <div class="form-group">
    <label for="biographie">Biographie :</label>
    <textarea id="biographie" name="biographie"><%= auteur.biographie %></textarea>
  </div>

  <div class="form-actions">
    <button type="submit">Modifier</button>
    <a href="/auteurs" class="btn">Annuler</a>
  </div>
</form>

<%- include('../../partials/footer') %>
